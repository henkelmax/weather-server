<svg
    xmlns="http://www.w3.org/2000/svg"
    width="1000" height="1000"
    viewBox="0 0 100 100">

    <svg x="8%" y="18%" width="86%" height="90%">
        {{{this.image}}}
    </svg>

    <text
            x="50%"
            y="22.5%"
            text-anchor="middle"
            font-size="24"
            fill="#3e3e3e"
            font-weight="bold"
            font-family="Avenir, Helvetica, Arial, sans-serif">
        {{this.temperature}} Â°C
    </text>

    <svg x="24%" y="24%" width="25%" height="8">
        <text
                x="6"
                y="55%"
                dominant-baseline="middle"
                font-size="5"
                fill="#3e3e3e"
                font-family="Avenir, Helvetica, Arial, sans-serif"
                font-weight="bold">
            {{this.rain}} mm
        </text>
        <svg x="0" y="1" width="6" height="6">
            {{{this.rainIcon}}}
        </svg>

    </svg>

    <svg x="51%" y="24%" width="25%" height="8">
        <text
                x="6"
                y="55%"
                dominant-baseline="middle"
                font-size="5"
                fill="#3e3e3e"
                font-family="Avenir, Helvetica, Arial, sans-serif"
                font-weight="bold">
            UVI {{this.uvi}}
        </text>
        <svg x="0" y="1" width="6" height="6">
            {{{this.sunIcon}}}
        </svg>

    </svg>

    <svg x="1%" y="95.75%" width="4" height="4">
        {{{this.updateIcon}}}
    </svg>
    <text
            x="0%"
            y="99%"
            dx="5"
            font-size="4"
            fill="#3e3e3e"
            font-family="Consolas, monospace">
        {{this.date}}
    </text>
</svg>