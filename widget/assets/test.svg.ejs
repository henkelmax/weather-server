<?xml version="1.0" standalone="no"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN" "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg 
    version="1.1"
    xmlns="http://www.w3.org/2000/svg"
    width="1000" height="1000"
    viewBox="0 0 100 100">

    <svg x="8%" y="18%" width="86%" height="90%">
        <% if (weather.rainRate > 0 || weather.rainHourly > 0) { %>
        <%- images.rainy %>
        <% } else if (weather.uvi <= 0) { %>
        <%- images.cloudy %>
        <% } else if (weather.uvi >= 1 && weather.uvi <= 2) { %>
        <%- images.sunnyCloudy %>
        <% } else { %>
        <%- images.sunny %>
        <% } %>
    </svg>

    <text
        x="50%"
        y="22.5%"
        text-anchor="middle"
        font-size="24"
        fill="#3e3e3e" 
        font-weight="bold"
        font-family="Avenir, Helvetica, Arial, sans-serif">
        25 Â°C
    </text>

    <svg x="24%" y="24%" width="25%" height="8">
        <text 
            x="6"
            y="55%"
            dominant-baseline="middle"
            font-size="5"
            fill="#3e3e3e"
            font-family="Avenir, Helvetica, Arial, sans-serif"
            font-weight="bold">
            <%= weather.rainDaily %> mm
        </text>
        <svg x="0" y="1" width="6" height="6">
            <%- images.rainIcon %>
        </svg>
        
    </svg>

    <svg x="51%" y="24%" width="25%" height="8">
        <text 
            x="6"
            y="55%"
            dominant-baseline="middle"
            font-size="5"
            fill="#3e3e3e"
            font-family="Avenir, Helvetica, Arial, sans-serif"
            font-weight="bold">
            UVI <%= weather.uvi %>
        </text>
        <svg x="0" y="1" width="6" height="6">
            <%- images.sunIcon %>
        </svg>
        
    </svg>
    
    <svg x="30" y="96" width="4" height="4">
        <%- images.updateIcon %>
    </svg>
    <text 
        x="50%"
        y="99%"
        dx="2.5"
        text-anchor="middle"
        font-size="4"
        fill="#3e3e3e"
        font-family="Consolas, monospace">
        <%= moment(weather.date).format("DD.MM.YYYY HH:mm") %>
    </text>
</svg>